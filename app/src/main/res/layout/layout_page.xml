<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dlo_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSoso">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rlo_toolBar"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <ImageButton
                    android:id="@+id/ibtn_openDrawer"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#00FFFFFF"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_menu" />

                <ImageButton
                    android:id="@+id/ibtn_map"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@id/ibtn_share"
                    android:background="#00FFFFFF"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_map_icon" />

                <ImageButton
                    android:id="@+id/ibtn_share"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@id/ibtn_plus"
                    android:background="#00FFFFFF"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_share_icon" />

                <ImageButton
                    android:id="@+id/ibtn_plus"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#00FFFFFF"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_plus_icon" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llo_main_top"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_below="@id/rlo_toolBar"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(현재위치)"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/tv_myLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="내 위치가 들어갈 곳"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="API를 받아온 시간이 들어감"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_statusImage"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/ic_wink"
                        android:scaleType="fitXY" />

                    <Button
                        android:id="@+id/btn_animation"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_below="@+id/iv_statusImage"
                        android:layout_centerHorizontal="true"
                        android:text="애니메이션ㄱㄱ"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/tv_miseStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_statusImage"
                        android:text="미세먼지 상태가 들어갈 곳"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"

                        />

                    <me.relex.circleindicator.CircleIndicator
                        android:id="@+id/iv_oval"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tv_miseStatus"
                        />


                </RelativeLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp">
                        <ImageButton
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            />
                        <androidx.viewpager.widget.ViewPager
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/vp_inPage"
                            android:layout_marginHorizontal="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            >

                        </androidx.viewpager.widget.ViewPager>
                        <ImageButton
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/ibtn_ad"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/llo_main_top"
                card_view:cardBackgroundColor="@color/colorCardSoso"
                card_view:cardCornerRadius="15dp"
                card_view:cardUseCompatPadding="true">

                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="15dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/advertisement_big" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_details"
                style="@style/main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ibtn_ad"
                android:text="세부사항" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_details"
                card_view:cardBackgroundColor="@color/colorCardSoso"
                card_view:cardCornerRadius="15dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/llo_details_top"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#00000000"
                        android:orientation="horizontal"
                        android:paddingHorizontal="15dp"
                        android:paddingVertical="15dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                style="@style/main_details_left"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="업데이트 시간 :" />

                            <TextView
                                style="@style/main_details_left"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="PM10 측정소 이름 :" />

                            <TextView
                                style="@style/main_details_left"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="PM2.5 측정소 이름 :" />

                            <TextView
                                style="@style/main_details_left"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="NO2 측정소 이름 :" />

                            <TextView
                                style="@style/main_details_left"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="O3 측정소 이름 :" />

                            <TextView
                                style="@style/main_details_left"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="CO 측정소 이름 :" />

                            <TextView
                                style="@style/main_details_left"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="SO2 측정소 이름 :" />

                            <TextView
                                style="@style/main_details_left"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="pm10 측정망 분류 :" />

                            <TextView
                                style="@style/main_details_left"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="pm2.5 측정망 분류 :" />

                            <TextView
                                style="@style/main_details_left"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="통합지수 값 :" />

                            <TextView
                                style="@style/main_details_left"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="통합지수 상태 :" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_details_update_time"
                                style="@style/main_details_right"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="업데이트 시간 :" />

                            <TextView
                                android:id="@+id/tv_details_pm10_name"
                                style="@style/main_details_right"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="PM10 측정소 이름 :" />

                            <TextView
                                android:id="@+id/tv_details_pm25_name"
                                style="@style/main_details_right"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="PM2.5 측정소 이름 :" />

                            <TextView
                                android:id="@+id/tv_details_no2"
                                style="@style/main_details_right"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="NO2 측정소 이름 :" />

                            <TextView
                                android:id="@+id/tv_details_o3"
                                style="@style/main_details_right"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="O3 측정소 이름 :" />

                            <TextView
                                android:id="@+id/tv_details_co"
                                style="@style/main_details_right"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="CO 측정소 이름 :" />

                            <TextView
                                android:id="@+id/tv_details_so2"
                                style="@style/main_details_right"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="SO2 측정소 이름 :" />

                            <TextView
                                android:id="@+id/tv_details_pm10_div"
                                style="@style/main_details_right"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="pm10 측정망 분류 :" />

                            <TextView
                                android:id="@+id/tv_details_pm25_div"
                                style="@style/main_details_right"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="pm2.5 측정망 분류 :" />

                            <TextView
                                android:id="@+id/tv_details_total"
                                style="@style/main_details_right"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="통합지수 값 :" />

                            <TextView
                                android:id="@+id/tv_details_total_status"
                                style="@style/main_details_right"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="통합지수 상태 :" />

                        </LinearLayout>
                    </LinearLayout>
                    <View
                        android:layout_marginTop="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@id/llo_details_top"
                        android:background="#ffffff" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/main_details_left"
                        android:textAlignment="center"
                        android:text="미세먼지는 사용자분과 가장 가까이 위치한, 정상 작동 중인 측정소의 실시간 정보를 보여드립니다."
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/main_details_left"
                        android:textAlignment="center"
                        android:text="본 자료는 한국환경공단(에어코리아)와 기상청에서 제공하는 실시간 관측 자료이며 실제 대기농도 수치와 다를 수 있습니다.\n"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/mise" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/s1" />

        <ImageButton
            android:id="@+id/ibtn_who"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/s2" />

        <ImageButton
            android:id="@+id/ibtn_eight"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/s3" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/s4" />

        <ImageButton
            android:id="@+id/btn_info"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/s5" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/s6" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/s7" />

        <ImageButton
            android:id="@+id/ibtn_setting"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/s8" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="0dp"
            android:paddingTop="0dp"
            android:paddingRight="0dp"
            android:paddingBottom="0dp"
            android:scaleType="fitXY"
            android:src="@drawable/s9" />


    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>